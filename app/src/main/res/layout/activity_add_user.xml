<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.user.AddUserActivity">

    <ScrollView
        android:layout_below="@+id/appBar"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        >
    <TextView
        android:id="@+id/txtLblName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/lblForm"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:text="@string/user_name" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/EditTextPadding"
        android:paddingLeft="@dimen/EditTextPadding"
        android:textSize="@dimen/formEditTextSize"
        android:inputType="textPersonName"
        android:text="" />

        <TextView
            android:id="@+id/txtLblName11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lblForm"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="@string/alias" />

        <EditText
            android:id="@+id/edtAlias"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/txtLblName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lblForm"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="@string/name_of_company" />

        <EditText
            android:id="@+id/edtCompanyName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/txtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/company_category"
            android:textColor="@color/black"
            android:textSize="@dimen/lblForm"
            android:textStyle="bold"
            android:visibility="visible" />

        <org.angmarch.views.NiceSpinner
            android:id="@+id/NsCompanyCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/veryLightGray"
            android:textSize="20sp"
            android:visibility="visible"
            app:popupTextAlignment="start"
            app:textTint="@color/black" />
    <TextView
        android:id="@+id/txtAddress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/lblForm"
        android:text="@string/address1" />
    <EditText
        android:id="@+id/edtAddress1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/EditTextPadding"
        android:paddingLeft="@dimen/EditTextPadding"
        android:textSize="@dimen/formEditTextSize"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        android:id="@+id/txtAddress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/lblForm"
        android:text="@string/address2_" />
    <EditText
        android:id="@+id/edtAddress2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/EditTextPadding"
        android:paddingLeft="@dimen/EditTextPadding"
        android:textSize="@dimen/formEditTextSize"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        android:id="@+id/txtCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/lblForm"
        android:text="@string/city" />
    <EditText
        android:id="@+id/editCity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/EditTextPadding"
        android:paddingLeft="@dimen/EditTextPadding"
        android:textSize="@dimen/formEditTextSize"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        android:id="@+id/txtCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/lblForm"
        android:text="@string/country" />
    <EditText
        android:id="@+id/edtCountry"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/EditTextPadding"
        android:paddingLeft="@dimen/EditTextPadding"
        android:textSize="@dimen/formEditTextSize"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        android:id="@+id/txtZipCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/lblForm"
        android:text="@string/zipcode" />
    <EditText
        android:id="@+id/edtZipCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/EditTextPadding"
        android:paddingLeft="@dimen/EditTextPadding"
        android:textSize="@dimen/formEditTextSize"
        android:inputType="number"
        android:text="" />
    <TextView
        android:id="@+id/txtMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/lblForm"
        android:text="@string/mobile" />
    <EditText
        android:id="@+id/edtMobile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/EditTextPadding"
        android:paddingLeft="@dimen/EditTextPadding"
        android:textSize="@dimen/formEditTextSize"
        android:inputType="number"
        android:text="" />
    <TextView
        android:id="@+id/txtSecondaryMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/lblForm"
        android:text="@string/secondary_mobile_" />
        <EditText
            android:id="@+id/edtSecondaryMobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="number"
            android:text="" />
        <TextView
            android:id="@+id/txtSecondaryMobile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/lblForm"
            android:text="@string/holding_capacity" />
        <EditText
            android:id="@+id/edtHoldingCapacity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="number"
            android:text="" />
        <TextView
            android:id="@+id/txtSecondaryMobile111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/lblForm"
            android:text="@string/per_month_requirement" />
        <EditText
            android:id="@+id/edtPerMonReq"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="number"
            android:text="" />
        <TextView
            android:id="@+id/txtSecondaryMobile1111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/lblForm"
            android:text="@string/cylinder_holding_credit_days" />
        <EditText
            android:id="@+id/edtCylHolCreDay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="number"
            android:text="" />
        <TextView
            android:id="@+id/txtSecondaryMobile11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/lblForm"
            android:text="@string/pin_number" />
        <EditText
            android:id="@+id/edtPinNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:text="" />
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/lblForm"
            android:text="@string/email" />
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="textEmailAddress"
            android:text="" />
        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/lblForm"
            android:text="@string/password" />
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="textPassword"
            android:text="" />
        <TextView
            android:id="@+id/txtSecondaryEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/lblForm"
            android:text="@string/secondary_email_" />
        <EditText
            android:id="@+id/edtSecondaryEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="textEmailAddress"
            android:text="" />
        <TextView
            android:id="@+id/txtSecondaryEmail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/lblForm"
            android:text="@string/referenceBy" />
        <EditText
            android:id="@+id/edtReferenceby"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/txtSecondaryEmai1l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/lblForm"
            android:text="@string/depositAmount" />
        <EditText
            android:id="@+id/edtDepositAmount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="@dimen/EditTextPadding"
            android:paddingLeft="@dimen/EditTextPadding"
            android:textSize="@dimen/formEditTextSize"
            android:inputType="numberDecimal"
            android:text="" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:text="@string/submit"/>
            <Button
                android:id="@+id/btnCancel"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:text="@string/cancel"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>