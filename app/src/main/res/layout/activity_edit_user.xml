<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/white"
    tools:context=".ui.company.AddCompany">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/txtLblName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/user_name"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />
            <TextView
                android:id="@+id/txtLblName11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/alias1"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAlias"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />
            <TextView
                android:id="@+id/txtLblName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/name_of_company"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCompanyName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtType1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/company_category"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold"
                android:visibility="visible" />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/NsCompanyCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/veryLightGray"
                android:textSize="20sp"
                android:visibility="visible"
                app:popupTextAlignment="start"
                app:textTint="@color/black" />

            <TextView
                android:id="@+id/txtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/type"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="Select"
                android:background="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/address1"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAddress1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/address2"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAddress2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/city"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editCity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/country"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCountry"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtZipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/zipcode"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtZipCode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/mobile"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtSecondaryMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/secondary_mobile_"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtSecondaryMobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtSecondaryMobile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/holding_capacity"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtHoldingCapacity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />
            <TextView
                android:id="@+id/txtSecondaryMobile111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/per_month_requirement"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPerMonReq"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />
            <TextView
                android:id="@+id/txtSecondaryMobile1111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/cylinder_holding_credit_days"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCylHolCreDay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />
            <TextView
                android:id="@+id/txtSecondaryMobile11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/lblForm"
                android:text="@string/pin_number" />
            <EditText
                android:id="@+id/edtPinNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingRight="@dimen/EditTextPadding"
                android:paddingLeft="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />

            <TextView
                android:id="@+id/txtSecondaryEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/secondary_email_"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtSecondaryEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />
            <TextView
                android:id="@+id/txtSecondaryEmail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/referenceBy1"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtReferenceby"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />
            <TextView
                android:id="@+id/txtSecondaryEmail11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/depositAmount1"
                android:textColor="@color/black"
                android:textSize="@dimen/lblForm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDepositAmount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/EditTextPadding"
                android:paddingRight="@dimen/EditTextPadding"
                android:textSize="@dimen/formEditTextSize"
                android:text="" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@string/submit"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_background"
                    android:text="@string/cancel"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>