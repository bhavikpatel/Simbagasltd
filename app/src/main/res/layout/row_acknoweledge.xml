<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/bgColor"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/rv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="11dp">

        <TextView
            android:id="@+id/tvRemark"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCompanyName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_toStartOf="@+id/imgAction"
            android:layout_toLeftOf="@+id/imgAction"
            android:layout_toEndOf="@+id/imgProfilePic"
            android:layout_toRightOf="@+id/imgProfilePic"
            android:ellipsize="end"
            android:text="Remark"
            android:textColor="@color/lightGrey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imgProfilePic"
            android:layout_toRightOf="@+id/imgProfilePic"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imgProfilePic"
            android:layout_toRightOf="@+id/imgProfilePic"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Company Name"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvCreatedby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRemark"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imgProfilePic"
            android:layout_toRightOf="@+id/imgProfilePic"
            android:text="Created by: "
            android:textColor="@color/lightGrey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvCreatedby"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/tvCreatedby"
            android:layout_toRightOf="@+id/tvCreatedby"
            android:text="Created Date: "
            android:textColor="@color/lightGrey"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:visibility="gone"
            android:textColor="@color/lightGrey"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="10sp" />
        <ImageView
            android:id="@+id/imgAction"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>