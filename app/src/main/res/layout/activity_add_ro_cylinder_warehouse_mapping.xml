    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".ui.company.AddCompany">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtLblCylinderNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lblForm"
            android:layout_marginTop="10dp"
            android:text="@string/cylinder_no" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtCylinderNos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btnScanCylinders"
                />

            <ImageView
                android:id="@+id/btnScanCylinders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_baseline_qr_code_scanner_24"
                android:padding="20dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtWarehouse"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/lblForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fromUser" />
        <org.angmarch.views.NiceSpinner
            android:id="@+id/spFromWarehouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textTint="@color/black"
            app:popupTextAlignment="start"
            android:textSize="20sp"
            android:backgroundTint="@color/veryLightGray"
            />
        <TextView
            android:id="@+id/txtWarehouse1"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/lblForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/towarehouse" />
        <org.angmarch.views.NiceSpinner
            android:id="@+id/spToWarehouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textTint="@color/black"
            app:popupTextAlignment="start"
            android:textSize="20sp"
            android:backgroundTint="@color/veryLightGray"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtManufactringDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/FillingDate"
            android:textSize="@dimen/lblForm" />
            <TextView
                android:id="@+id/txtSignaure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/clik_here_sig"
                android:textSize="@dimen/lblForm" />
        </LinearLayout>
