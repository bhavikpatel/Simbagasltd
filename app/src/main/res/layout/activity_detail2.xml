                        android:visibility="gone"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_baseline_circle_24" />

                        <TextView
                            android:id="@+id/txtAddresslbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/HoldingCreditLastDate"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtHoldingcreditdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:visibility="gone"
                        android:text="GIDC, Anand,Gujarat"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_baseline_circle_24" />

                        <TextView
                            android:id="@+id/txtStatuslbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/HoldDays"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtHoldDays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="399443"
                        android:visibility="gone"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp" />


                    <LinearLayout
                        android:id="@+id/lvHoldingCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_baseline_circle_24" />

                        <TextView
                            android:id="@+id/txtHoldingCapacitylbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/HoldingOverdue"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtHoldingOverdue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="93939399443"
                        android:visibility="gone"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp" />
                </LinearLayout>
            </ScrollView>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lvButtom"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btnAction"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_mode_edit_24"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/btnAckno"
                    android:layout_marginLeft="50dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_doorbell_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageView
                    android:id="@+id/btnCancel"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/ic_baseline_cancel_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>
